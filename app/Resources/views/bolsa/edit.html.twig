{% extends 'base.html.twig' %}

{% block body %}

    <div class="shadow">
        <input type="hidden" id="module" value="bolsa">
        <div id="edit_bolsa">
            <div class="panel panel-default my-panels">
                <div class="panel-heading">
                    <h2 class="h2 form-title">Editar información de la unidad de sangre.</h2>
                </div>
                <div class="panel-body">
                    {{ form_start(edit_form) }}
                    <div class="col-md-6 col-sm-6 col-xs-12 col-lg-6">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.codigo, 'Codigo') }}
                            {{ form_row(edit_form.codigo) }}
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.lote, 'Lote') }}
                            {{ form_row(edit_form.lote) }}
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.volumen, 'Volumen') }}
                            {{ form_row(edit_form.volumen) }}
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.procedencia, 'Procedencia') }}
                            {{ form_row(edit_form.procedencia) }}
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.fechaDonacion, 'Fecha de Prod.') }}
                            {{ form_row(edit_form.fechaDonacion) }}
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.fechaVencimiento, 'Fecha de Venc.') }}
                            {{ form_row(edit_form.fechaVencimiento) }}
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 top-separator">
                            {{ form_label(edit_form.problemas, 'Observaciones') }}
                            {{ form_row(edit_form.problemas) }}
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-6 col-xs-12 col-lg-6">
                        <div class="col-md-7 col-sm-9 col-xs-12 top-separator">
                            {{ form_label(edit_form.componente, 'Componente Sanguíneo') }}
                            {{ form_row(edit_form.componente) }}
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12 col-lg-6 top-separator">
                            {{ form_label(edit_form.grupoSanguineo, 'Grupo Sanguíneo') }}
                            {{ form_row(edit_form.grupoSanguineo) }}
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12 col-lg-6 top-separator">
                            {{ form_label(edit_form.rh, 'Factor Rh') }}
                            {{ form_row(edit_form.rh) }}
                        </div>

                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-4 top-separator">
                            {{ form_label(edit_form.muestra, '¿Muestra tomada?') }}
                            {{ form_row(edit_form.muestra) }}
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-lg-6 top-separator">
                            {{ form_widget(edit_form) }}
                            <button type="submit" class="btn btn-success btn-lg button-separator"><span
                                        class="glyphicon glyphicon-floppy-save"></span> Editar
                            </button>
                            {{ form_end(edit_form) }}
                            <a href="{{ path('bolsa_index') }}" class="btn btn-danger btn-lg button-separator"><span
                                        class="glyphicon glyphicon-remove"></span> Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    {% include 'all-js.html.twig' %}
{% endblock %}

